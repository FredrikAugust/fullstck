// mixins and variables
$main-color: #38142E;

body, html {
  height: 100%;
}

.inner-body {
  height: 100%;
  overflow-x: hidden;
}

p {
  line-height: 2rem;
}

.parallax-container {
  line-height: 0;
  height: auto;
  display: flex;
}

h1 {
  margin: 1.68rem 0;
}

.section {
  flex: auto;
  align-self: center;
}

.icon-block {
  padding: 0 15px;

  .material-icons {
    font-size: inherit;
  }
}

footer.page-footer {
  margin-top: 40px;

  background-color: #4F1D42;

  .footer-copyright {
    background-color: #38142E;
  }
}

@media (min-width: 660px) {
  #big-p {
    margin: 50px auto;
  }
}

#index-banner {
  height: 100%;

  h1 {
    color: white;
  }
}

.trans-nav {
  background-color: rgba(0, 0, 0, 0);
  box-shadow: none;
}

.vis-nav {
  background-color: $main-color;
  box-shadow: 0 2px 5px 0 #00000029, 0 2px 10px 0 #0000001f;
}

.sixty-percent-text {
  width: 60%;
  margin: auto;
  margin-bottom: 30px;
}

.brand-logo img {
  height: 0.8em;
}

.separator-nav {
  background-color: $main-color;
}

.half-parallax {
  // need these stupid overrides because it won't override by default #css
  height: 190px;
  min-height: 190px;
  max-height: 190px;
}

.navbar-fixed {
  position:fixed;
}

.carousel .card-panel {
  padding: 5px;
  background-color: $main-color;
}

.main-color {
  background-color: $main-color;
}

.side-nav>li>a {
color: white;
}

footer li * {
  vertical-align:middle;
}

.material-icons {
  vertical-align: middle;
}

// media queries
@media (max-width: 600px) {
  .sixty-percent-text {
    width: initial;
  }
  form button {
    display: block !important;
    margin: auto;
  }
  .parallax {
    display: none;
  }
  #index-banner {
    background-image: url("<%= asset_path 'background.jpg' %>");
    background-position: center center;
    background-attachment: fixed;
  }
  h1.header.center {
    font-size: 2em;
  }
}

@media (min-width: 992px) {
  form {
    margin-top: 2rem;
  }
}

@media (max-width: 425px) {
  .indicators {
    display: none;
  }

  .with-indicators {
    bottom: 20px !important;
  }
}
